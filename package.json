{
  "name": "language-settings-manager",
  "version": "0.1.4",
  "description": "Лагідна Українізація",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack --mode development --verbose",
    "stage": "cross-env NODE_ENV=stage webpack --mode production  --verbose",
    "prod": "cross-env NODE_ENV=production webpack --mode production --verbose",
    "tests": "./node_modules/mocha/bin/mocha --require @babel/register --timeout 15000 --reporter nyan tests",
    "format": "prettier-eslint --write $PWD/'src/**/*.js' $PWD/'src/**/*.css' $PWD/'src/**/*.html' $PWD/'src/**/*.json' $PWD/'tests/**/*.js'",
    "safari:build": "xcodebuild -project 'safari/Language-settings-manager/Лагідна Українізація.xcodeproj'",
    "safari:start": "npm run safari:build && open 'safari/Language-settings-manager/build/Release/Лагідна Українізація.app'",
    "safari:dev": "npm run safari:start && chokidar \"build\" -c \"npm run safari:build\""
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.0.1",
    "mocha-logger": "^1.0.6",
    "pre-commit": "^1.2.2"
  },
  "dependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.12.13",
    "@babel/node": "^7.10.1",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.12.13",
    "@babel/register": "^7.10.1",
    "@babel/runtime": "^7.10.2",
    "babel": "^6.23.0",
    "babel-loader": "^8.2.2",
    "bottleneck": "^2.19.5",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "^6.4.1",
    "cross-env": "^7.0.2",
    "css-loader": "3.2.0",
    "dotenv": "^8.2.0",
    "file-loader": "4.3.0",
    "fs-extra": "8.1.0",
    "glob": "^7.1.6",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "ifdef-loader": "^2.3.2",
    "jquery": "^3.5.1",
    "mini-css-extract-plugin": "^0.9.0",
    "prettier-eslint-cli": "^5.0.0",
    "qrcode": "^1.5.0",
    "resolve-url-loader": "^3.1.1",
    "semantic-ui-css": "^2.4.1",
    "serialize-error": "^7.0.1",
    "style-loader": "1.0.0",
    "to-string-loader": "^1.1.6",
    "url-loader": "^4.1.0",
    "uuid": "^8.1.0",
    "webextension-polyfill": "^0.7.0",
    "webpack": "^4.46.0",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "^3.11.0",
    "webpack-dotenv-plugin": "^2.1.0",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties"
      ]
    ]
  },
  "pre-commit": [
    "format"
  ]
}
